<Window x:Class="TaskbarLyrics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TaskbarLyrics" 
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize"
        ShowActivated="False"
        MouseDown="Window_MouseDown"
        MouseEnter="Window_MouseEnter"
        MouseLeave="Window_MouseLeave">
    
    <Grid x:Name="MainGrid">
        <Border x:Name="LyricsContainer" 
                Background="Transparent" 
                Padding="10,4"
                VerticalAlignment="Center"
                MouseEnter="LyricsContainer_MouseEnter"
                MouseLeave="LyricsContainer_MouseLeave">
            <ContentControl x:Name="LyricsContent" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
        </Border>
        
        <Border x:Name="ControlPanelBorder"
                Background="Transparent"
                Padding="5,5"
                VerticalAlignment="Center"
                Visibility="Collapsed"
                MouseEnter="ControlPanelBorder_MouseEnter"
                MouseLeave="ControlPanelBorder_MouseLeave">
            <StackPanel x:Name="ControlPanel"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                
                <Button x:Name="PrevButton"
                        Content="⏮"
                        FontSize="16"
                        Foreground="White"
                        Background="#20000000"
                        BorderBrush="#60FFFFFF"
                        BorderThickness="1"
                        Width="30"
                        Height="30"
                        Padding="0"
                        Margin="3,0"
                        Click="PrevButton_Click"
                        Cursor="Hand"
                        ToolTip="上一曲">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" 
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="3">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#40000000"/>
                                                <Setter TargetName="border" Property="BorderBrush" Value="#80FFFFFF"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#60000000"/>
                                                <Setter TargetName="border" Property="BorderBrush" Value="#A0FFFFFF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button x:Name="PlayPauseButton"
                        Content="⏸"
                        FontSize="16"
                        Foreground="White"
                        Background="#20000000"
                        BorderBrush="#60FFFFFF"
                        BorderThickness="1"
                        Width="30"
                        Height="30"
                        Padding="0"
                        Margin="3,0"
                        Click="PlayPauseButton_Click"
                        Cursor="Hand"
                        ToolTip="播放/暂停">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" 
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="3">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#40000000"/>
                                                <Setter TargetName="border" Property="BorderBrush" Value="#80FFFFFF"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#60000000"/>
                                                <Setter TargetName="border" Property="BorderBrush" Value="#A0FFFFFF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button x:Name="NextButton"
                        Content="⏭"
                        FontSize="16"
                        Foreground="White"
                        Background="#20000000"
                        BorderBrush="#60FFFFFF"
                        BorderThickness="1"
                        Width="30"
                        Height="30"
                        Padding="0"
                        Margin="3,0"
                        Click="NextButton_Click"
                        Cursor="Hand"
                        ToolTip="下一曲">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" 
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="3">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#40000000"/>
                                                <Setter TargetName="border" Property="BorderBrush" Value="#80FFFFFF"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#60000000"/>
                                                <Setter TargetName="border" Property="BorderBrush" Value="#A0FFFFFF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>